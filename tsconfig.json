{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
	"baseUrl": ".",
	"moduleResolution": "node",
	"module": "ESNext",
	"strict": true,
	"sourceMap": true,
	"outDir": "lib"
  },
  "include": [
	"src/**/*.ts"
  ],
  "exclude": [
	"node_modules/**/*"
  ],
  "typeRoots": [
	"./node_modules/@types",
	"./src/@types"
  ]
}
